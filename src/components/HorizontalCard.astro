---
const { title, date, img, desc, url, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
import dayjs from "dayjs";
import localizedFormat from "dayjs/plugin/localizedFormat";

dayjs.extend(localizedFormat);
const displayDate = dayjs(date).format("ll")
---

<div
  class="bg-base-300/10 backdrop-blur-2xl hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="flex items-start justify-center max-w-7xl flex-col md:flex-row">
      {
        <Image
          src={img ? img : '/hero_img.webp'}
          width={750}
          height={422}
          format="webp"
          alt={title}
          class="max-w-[220px] aspect-video object-cover"
        />
      }
      <div class="grow w-full p-4">
        <div class="flex items-end justify-between gap-2">
          <h2 class="card-title">
            {title}
          </h2>
          {date && <time class="text-sm opacity-60 min-w-[80px]">{displayDate}</time>}
        </div>
        <p class="my-2 max-w-[620px]">{desc}</p>
      </div>
    </div>
  </a>
</div>
